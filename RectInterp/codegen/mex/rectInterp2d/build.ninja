# CompilerName=gcc
# Mode=optim
ninja_required_version = 1.3

# Basic folders
root = .
builddir = $root/build/glnxa64
matlabdir = /usr/local/MATLAB/R2020b
startdir = /home/janukan/CapstoneWinter/interpolation/ELPSEinterp/RectInterp

# Toolchain information
cc = /usr/bin/gcc
cxx = g++
linker = /usr/bin/gcc
linkerxx = g++

cflags =  -fexceptions -fPIC -fno-omit-frame-pointer -pthread -D_GNU_SOURCE -DMATLAB_MEX_FILE  -O2 -fwrapv -DNDEBUG -std=c99 -I "$root" -I "$startdir" -I "$root/interface" -I "$matlabdir/extern/include" -I "." -DMODEL=rectInterp2d_mex -c 

cxxflags =  -fexceptions -fPIC -fno-omit-frame-pointer -pthread -std=c++11 -D_GNU_SOURCE -DMATLAB_MEX_FILE  -O2 -fwrapv -DNDEBUG -std=c++11 -I "$root" -I "$startdir" -I "$root/interface" -I "$matlabdir/extern/include" -I "." -DMODEL=rectInterp2d_mex -c 

ldflags =  -pthread -Wl,--no-undefined -Wl,-rpath-link,$matlabdir/bin/glnxa64 -shared  -L"$matlabdir/bin/glnxa64" -lmx -lmex -lmat -lm -lstdc++  -o rectInterp2d_mex.mexa64 -lemlrt -lcovrt -lut -lmwmathutil  -Wl,--version-script,rectInterp2d_mex.map

# Build Rules
rule cc
    command = $cc $cflags $in -o $out

rule cxx
    command = $cxx $cxxflags $in -o $out

rule link
    command = $linker $in $ldflags

rule linkxx
    command = $linkerxx $in $ldflags

# Build
build $builddir/rectInterp2d_data.o : cc $root/rectInterp2d_data.c
build $builddir/rt_nonfinite.o : cc $root/rt_nonfinite.c
build $builddir/rectInterp2d_initialize.o : cc $root/rectInterp2d_initialize.c
build $builddir/rectInterp2d_terminate.o : cc $root/rectInterp2d_terminate.c
build $builddir/rectInterp2d.o : cc $root/rectInterp2d.c
build $builddir/_coder_rectInterp2d_api.o : cc $root/interface/_coder_rectInterp2d_api.c
build $builddir/_coder_rectInterp2d_mex.o : cc $root/interface/_coder_rectInterp2d_mex.c
build $builddir/rectInterp2d_emxutil.o : cc $root/rectInterp2d_emxutil.c
build $builddir/_coder_rectInterp2d_info.o : cc $root/interface/_coder_rectInterp2d_info.c
build $builddir/c_mexapi_version.o : cc $matlabdir/extern/version/c_mexapi_version.c

# Link
build $root/rectInterp2d_mex.mexa64 : link $builddir/rectInterp2d_data.o $builddir/rt_nonfinite.o $builddir/rectInterp2d_initialize.o $builddir/rectInterp2d_terminate.o $builddir/rectInterp2d.o $builddir/_coder_rectInterp2d_api.o $builddir/_coder_rectInterp2d_mex.o $builddir/rectInterp2d_emxutil.o $builddir/_coder_rectInterp2d_info.o $builddir/c_mexapi_version.o 
